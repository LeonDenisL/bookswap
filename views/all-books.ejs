<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todos os Livros Publicados</title>
    <link rel="stylesheet" href="/css/home.css" />
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </head>
  <body>
    <header class="bg-purple text-white py-3">
      <div class="container d-flex justify-content-between align-items-center">
        <h1 class="bookswap"><a href="/">BookSwap</a></h1>
        <nav>
          <ul class="nav">
            <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/profile">Perfil</a>
            </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/publish-book"
                >Publicar Livro</a
              >
            </li>
            <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/register">Registrar</a>
            </li>
            <% } %> <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/logout">Logout</a>
            </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/all-books"
                >Todos os Livros</a
              >
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container my-5">
      <h1 class="text-center">Todos os Livros Publicados</h1>
      <div class="books mt-4">
        <% books.forEach(function(book) { %>
        <div class="book">
          <a href="/book-details/<%= book.BookID %>">
            <img src="<%= book.CoverImageURL %>" alt="<%= book.Title %>" />
            <h3><%= book.Title %></h3>
            <p>Autor: <%= book.Author %></p>
            <p>Editora: <%= book.Publisher %></p>
          </a>
        </div>
        <% }); %>
      </div>
    </div>
    <footer class="bg-dark text-white text-center py-3">
      <div class="container">
        <p>&copy; 2024 BookSwap. Todos os direitos reservados.</p>
      </div>
    </footer>
  </body>
</html>
